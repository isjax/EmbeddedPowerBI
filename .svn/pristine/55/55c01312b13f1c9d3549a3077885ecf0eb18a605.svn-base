@page
@model UsersModel
@{
    ViewData["Title"] = "Users";
}

<h2>@ViewData["Title"]</h2>


<p>
    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Page("/Account/Users")">Register</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Input[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input[0].Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input[0].Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Input)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization.Name)
                </td>
                <td>
                    @foreach (var role in item.Roles)
                    {
                        @role<br>
                    }
                </td>
                <td>
                    <a asp-area="Identity" asp-page="/Account/EditUser" asp-route-id="@item.ID" asp-route-returnUrl="@Url.Page("/Account/Users")">Edit</a> |
                    <a asp-area="Identity" asp-page="/Account/DeleteUser" asp-route-id="@item.ID" asp-route-returnUrl="@Url.Page("/Account/Users")">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
