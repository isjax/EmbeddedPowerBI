@page
@model EditUserModel
@using EmbeddedPowerBI.Areas.Identity.Models;

@{
    ViewData["Title"] = "Update ";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Update account information.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.User.Name"></label>
                <input asp-for="Input.User.Id" type="hidden" />
                <input asp-for="Input.User.Name" class="form-control" />
                <span asp-validation-for="Input.User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Email"></label>
                <input type="email" asp-for="Input.User.Email" class="form-control" />
                <span asp-validation-for="Input.User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.OrganizationID"></label>
                <select class="form-control" asp-for="Input.User.OrganizationID">
                    @for (int i = 0; i < Model.Input.Organizations.Count; i++)
                    {

                        if (Model.Input.Organizations[i].Id == Model.Input.User.OrganizationID)
                        {
                            <option value="@Model.Input.Organizations[i].Id" selected>@Model.Input.Organizations[i].Name</option>
                        }
                        else
                        {
                            <option value="@Model.Input.Organizations[i].Id">@Model.Input.Organizations[i].Name</option>
                        }
                    }
                </select>
                @*<span asp-validation-for="Input.Organization" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Input.Roles"></label>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @for (int i = 0; i < Model.Input.Roles.Count; i++)
                        {
                            <div><input type="hidden" asp-for="Input.Roles[i].Name" /><input type="checkbox" asp-for="Input.Roles[i].IsAssigned" /><span style="padding-left:5px">@Model.Input.Roles[i].Name</span></div>
                        }
                    </div>
                </div>
                @*<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

