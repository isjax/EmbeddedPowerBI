@page
@model IndexModel
@{
    ViewData["Title"] = "Roles";
}

<h2>@ViewData["Title"]</h2>


<p>
    <a asp-page="./Create" asp-route-returnUrl="@Url.Page("./Index")">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Input[0].Name)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Input)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" asp-route-returnUrl="@Url.Page("./Index")">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" asp-route-returnUrl="@Url.Page("./Index")">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
